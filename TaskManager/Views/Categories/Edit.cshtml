@model EditCategoryFormViewModel
<div class="container mt-5">
    <h1 class="text-center">Edit Category</h1>

    <div class="card p-4 shadow">
        @await Html.PartialAsync("Modal")
        <form method="post" asp-action="Edit" asp-controller="Categories">
          
            <div class="form-group mb-3">
                <label asp-for="Name" class="form-label">Category Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-success">Save</button>
                <a href="@Url.Action("Index", "Categories")" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
